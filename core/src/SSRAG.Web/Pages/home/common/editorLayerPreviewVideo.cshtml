@page
@{ Layout = "_Layout"; }
@section Styles{
  <style>
    .videojs {
      width: 100% !important;
      min-height: 360px;
    }
  </style>
}

<video
  ref="videoPlayer"
  class="videojs vjs-default-skin vjs-big-play-centered"
  width="100%"
  controls
  preload="auto"
  data-setup="{}">
  <source :src="videoUrl"></source>
</video>

<el-divider></el-divider>
<el-row align="right" style="margin-right: 5px; margin-top: 10px;">
  <el-col :span="24" align="right">
    <el-button size="small" v-on:click="btnCancelClick">关 闭</el-button>
  </el-col>
</el-row>

@section Scripts{
  <script src="/sitefiles/assets/js/home/common/editorLayerPreviewVideo.js" type="text/javascript"></script>
}