@page
@{ Layout = "_Layout"; }
@section Styles{
  <style>
    .el-alert { padding: 2px; width: 100px; }
  </style>
}

<div style="height: 10px;"></div>

<el-form ref="form" :model="form" size="small" label-width="160px">
  <el-form-item
    v-for="attributeName in attributeNames" 
    :key="attributeName" 
    :label="getAttributeText(attributeName)">
    <span v-html="getAttributeValue(attributeName)"></span>
  </el-form-item>
  <el-form-item v-if="formData.channelPage" label="所在栏目页">
    <span v-html="formData.channelPage"></span>
  </el-form-item>
  <el-form-item v-if="formData.contentPage" label="所在内容页">
    <span v-html="formData.contentPage"></span>
  </el-form-item>
  <template v-if="isReply">
    <el-form-item label="是否回复">
      <el-alert v-if="formData.isReplied" title="已回复" type="success" :closable="false" center></el-alert>
      <el-alert v-else title="未回复" type="error" :closable="false" center></el-alert>
    </el-form-item>
    <el-form-item v-if="formData.isReplied" label="回复时间">
      <span v-html="formData.replyDate"></span>
    </el-form-item>
    <el-form-item v-if="formData.isReplied" label="回复内容">
      <span v-html="formData.replyContent"></span>
    </el-form-item>
  </template>
</el-form>

<el-divider></el-divider>
<div style="height: 10px"></div>

<el-row>
  <el-col :span="24" align="right">
    <el-button size="small" v-on:click="btnCancelClick">关 闭</el-button>
  </el-col>
</el-row>

@section Scripts{
  <script src="/sitefiles/assets/js/admin/cms/formDataLayerView.js" type="text/javascript"></script>
}