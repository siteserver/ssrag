@page
@{ Layout = "_Layout"; }

<div style="height: 10px;"></div>

<el-form v-on:submit.native.prevent size="small" ref="form" :model="form" label-width="280px">

  <el-form-item label="附件上传文件夹" prop="fileUploadDirectoryName" :rules="{ required: true, message: '请输入附件上传文件夹' }">
    <el-input v-model="form.fileUploadDirectoryName" :disabled="isSafeMode" placeholder="请输入附件上传文件夹"></el-input>
  </el-form-item>
  <el-form-item label="附件上传保存方式">
    <el-radio-group v-model="form.fileUploadDateFormatString" :disabled="isSafeMode">
      <el-radio label="Year">按年存入不同目录</el-radio>
      <el-radio label="Month">按年/月存入不同目录</el-radio>
      <el-radio label="Day">按年/月/日存入不同目录</el-radio>
    </el-radio-group>
    <div class="tips">本设置只影响新上传的附件, 设置更改之前的附件仍存放在原来位置</div>
  </el-form-item>
  <el-form-item label="是否自动重命名上传的附件">
    <el-radio-group v-model="form.isFileUploadChangeFileName" :disabled="isSafeMode">
      <el-radio :label="true">自动修改文件名</el-radio>
      <el-radio :label="false">保持文件名不变</el-radio>
    </el-radio-group>
    <div class="tips">本设置只影响新上传的附件, 设置更改之前的附件名仍保持不变</div>
  </el-form-item>
  <el-form-item label="上传附件类型" prop="fileUploadExtensions" :rules="{ required: true, message: '请输入上传附件类型' }">
    <el-input v-model="form.fileUploadExtensions" :disabled="isSafeMode" placeholder="请输入上传附件类型"></el-input>
    <div class="tips">类型之间用“,”分割</div>
  </el-form-item>
  <el-form-item label="上传附件最大大小" prop="fileUploadTypeMaxSize" :rules="[
    { required: true, message: '请输入上传附件最大大小' },
    { validator: utils.validateInt }
  ]">
    <el-input v-model.number="form.fileUploadTypeMaxSize" style="width: 120px" placeholder="请输入上传附件最大大小"></el-input>
    <span class="tips">(MB)</span>
  </el-form-item>
  <el-form-item label="下载附件类型" prop="fileDownloadExtensions" :rules="{ required: true, message: '请输入下载附件类型' }">
    <el-input v-model="form.fileDownloadExtensions" :disabled="isSafeMode" placeholder="请输入下载附件类型"></el-input>
    <div class="tips">点击下载以上类型文件时，系统将弹出下载保存框强制下载文件，类型之间用“,”分割</div>
  </el-form-item>

  <el-form-item>
    <el-button type="primary" v-on:click="btnSubmitClick" size="small">确 定</el-button>
  </el-form-item>
</el-form>

@section Scripts{
<script src="/sitefiles/assets/js/admin/cms/settingsUploadFile.js" type="text/javascript"></script> }